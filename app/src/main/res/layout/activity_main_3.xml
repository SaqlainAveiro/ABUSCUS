<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_3"
    android:stretchColumns="1"
    android:shrinkColumns="0"

    >


    <TableRow
        android:id="@+id/row0id"
        android:layout_marginTop="20dp"
        android:background="#CAC9C9"
        >

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_span="5"
            android:text="Bus Route List"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            >

        </TextView>

    </TableRow>




    <TableRow
        android:id="@+id/row1id"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        >

        <TextView

            android:layout_span="5"
            android:text="Available Busses : "
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            >

        </TextView>

    </TableRow>



    <TableRow
        android:id="@+id/row2id"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        >

            <TextView

                android:layout_height="27dp"
                android:layout_width="match_parent"
                android:text="From : "
                android:textSize="17dp"
                android:paddingLeft="5dp"
                android:textStyle="bold"

                >

            </TextView>


        <TextView

            android:id="@+id/showtheCurrCity"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:textSize="17sp"
            android:textStyle="bold" />


    </TableRow>

    <TableRow
        android:id="@+id/row3id"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        >

        <TextView

            android:layout_height="27dp"
            android:layout_width="match_parent"
            android:text="To : "
            android:textSize="17dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"

            >

        </TextView>

        <TextView

            android:id="@+id/showDesCity"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:textSize="17dp"
            android:textStyle="bold"

            >

        </TextView>


    </TableRow>

    <TableRow
        android:id="@+id/row4id"
        android:layout_marginTop="5dp"
        >

        <TextView

