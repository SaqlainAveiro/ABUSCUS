            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:layout_width="70dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Fare"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <TextView

            android:paddingRight="6dp"
            android:text="Operator"
            android:textSize="20dp"
            android:paddingLeft="6dp"
            android:textStyle="bold"
            >

        </TextView>

    </TableRow>


    <TableRow
        android:id="@+id/row5id"
        android:layout_marginTop="5dp"
