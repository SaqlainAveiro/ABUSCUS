            android:paddingLeft="6dp"
            android:textStyle="bold"
            >

        </TextView>

        <TextView
            android:paddingRight="6dp"
            android:text="Time"
            android:textSize="20sp"
            android:paddingLeft="6dp"
            android:textStyle="bold"
